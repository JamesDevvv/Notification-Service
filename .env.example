# FastAPI / Uvicorn
HOST=0.0.0.0
PORT=8000
RELOAD=true
LOG_LEVEL=info

# SQLite data directory (mounted as volume in Docker)
DB_DIR=./data

# Queue workers
QUEUE_WORKERS=4

# Rate limiter (optional)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_CAPACITY=10
RATE_LIMIT_REFILL=1

# Circuit Breaker
CB_COOLDOWN=60

# Redis (enabled by default in docker-compose)
REDIS_URL=redis://redis:6379/0

# SMTP (email channel)
# Real SMTP sending is auto-enabled only when these are provided
# Otherwise, email channel uses mock sending
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USERNAME=your_user
# SMTP_PASSWORD=your_pass
# SMTP_FROM=no-reply@example.com
# SMTP_USE_TLS=true
# SMTP_STARTTLS=true

# Email headers placeholders
ADD_SPF_HEADER=true
ADD_DKIM_HEADER=true




#DB
DB_DIR=/data
DATABASE_URL=sqlite:////data/notifications.db